<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#ffffff"
             android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42.0dp"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/r_return"
            android:layout_width="42.24dp"
            android:layout_height="42.24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/return_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/tab_back"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5.76dp"
            android:textColor="#444444"
            android:textSize="14.66sp"
            android:layout_marginRight="14.4dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="17.33sp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="42.24dp"
            android:layout_height="42.24dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_plus_creat" android:visibility="gone"/>

        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#dddddd"/>
</FrameLayout>